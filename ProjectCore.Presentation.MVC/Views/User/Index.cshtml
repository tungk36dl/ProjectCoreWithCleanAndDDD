@model ProjectCore.Application.Common.Models.PagedResult<ProjectCore.Application.Dtos.Users.UserDto>

@{
    ViewData["Title"] = "User List";
    var keyword = ViewBag.Keyword as string;
    var sortBy = ViewBag.SortBy as string;
    var sortDescending = (bool?)ViewBag.SortDescending ?? false;

    // Advanced search params
    var userName = ViewBag.UserName as string;
    var email = ViewBag.Email as string;
    var fullName = ViewBag.FullName as string;
    var gender = ViewBag.Gender as string;
    var roleId = ViewBag.RoleId as Guid?;
    var roles = ViewBag.Roles as IEnumerable<ProjectCore.Application.Dtos.Roles.RoleDto>;
}

<h1>User List</h1>

<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0">Search</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <!-- Hidden inputs to preserve sort state -->
            <input type="hidden" name="sortBy" value="@sortBy" />
            <input type="hidden" name="sortDescending" value="@sortDescending.ToString().ToLower()" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label for="keyword" class="form-label">Keyword (General)</label>
                    <input type="text" name="keyword" value="@keyword" class="form-control" placeholder="Search..." />
                </div>
                <div class="col-md-4">
                    <label for="userName" class="form-label">Username</label>
                    <input type="text" name="userName" value="@userName" class="form-control" placeholder="Username" />
                </div>
                <div class="col-md-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="email" value="@email" class="form-control" placeholder="Email" />
                </div>
                <div class="col-md-4">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" name="fullName" value="@fullName" class="form-control" placeholder="Full Name" />
                </div>
                <div class="col-md-4">
                    <label for="gender" class="form-label">Gender</label>
                    <select name="gender" class="form-select">
                        <option value="">-- All --</option>
                        <!option value="Male" @(gender == "Male" ? "selected" : "")>Male</!option>
                        <!option value="Female" @(gender == "Female" ? "selected" : "")>Female</!option>
                        <!option value="Other" @(gender == "Other" ? "selected" : "")>Other</!option>
                    </select>
                </div>
                 <div class="col-md-4">
                    <label for="roleId" class="form-label">Role</label>
                    <select name="roleId" class="form-select">
                        <option value="">-- All --</option>
                        @if (roles != null)
                        {
                            foreach (var role in roles)
                            {
                                <!option value="@role.Id" @(roleId == role.Id ? "selected" : "")>@role.Name</!option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="mt-3 text-end">
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>
                <a asp-action="Index" 
                   asp-route-keyword="@keyword" 
                   asp-route-userName="@userName"
                   asp-route-email="@email"
                   asp-route-fullName="@fullName"
                   asp-route-gender="@gender"
                   asp-route-roleId="@roleId"
                   asp-route-sortBy="UserName" 
                   asp-route-sortDescending="@(sortBy == "UserName" && !sortDescending ? "true" : "false")" class="text-decoration-none text-dark">
                   Username @if(sortBy == "UserName") { <span>@(sortDescending ? "▼" : "▲")</span> }
                </a>
            </th>
            <th>
               <a asp-action="Index" 
                  asp-route-keyword="@keyword" 
                   asp-route-userName="@userName"
                   asp-route-email="@email"
                   asp-route-fullName="@fullName"
                   asp-route-gender="@gender"
                   asp-route-roleId="@roleId"
                  asp-route-sortBy="Email" 
                   asp-route-sortDescending="@(sortBy == "Email" && !sortDescending ? "true" : "false")" class="text-decoration-none text-dark">
                   Email @if(sortBy == "Email") { <span>@(sortDescending ? "▼" : "▲")</span> }
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-keyword="@keyword" 
                   asp-route-userName="@userName"
                   asp-route-email="@email"
                   asp-route-fullName="@fullName"
                   asp-route-gender="@gender"
                   asp-route-roleId="@roleId"
                   asp-route-sortBy="FullName" 
                   asp-route-sortDescending="@(sortBy == "FullName" && !sortDescending ? "true" : "false")" class="text-decoration-none text-dark">
                   Full Name @if(sortBy == "FullName") { <span>@(sortDescending ? "▼" : "▲")</span> }
                </a>
            </th>
            <th>Phone</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Items != null && Model.Items.Any())
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                         <span class="badge bg-secondary">@item.RoleIds.Count Roles</span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No users found</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model != null && Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-page="@(Model.PageIndex - 1)" 
                   asp-route-keyword="@keyword" 
                   asp-route-userName="@userName"
                   asp-route-email="@email"
                   asp-route-fullName="@fullName"
                   asp-route-gender="@gender"
                   asp-route-roleId="@roleId"
                   asp-route-sortBy="@sortBy" 
                   asp-route-sortDescending="@sortDescending">Previous</a>
            </li>
            
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@i" 
                       asp-route-keyword="@keyword" 
                       asp-route-userName="@userName"
                       asp-route-email="@email"
                       asp-route-fullName="@fullName"
                       asp-route-gender="@gender"
                       asp-route-roleId="@roleId"
                       asp-route-sortBy="@sortBy" 
                       asp-route-sortDescending="@sortDescending">@i</a>
                </li>
            }
            
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-page="@(Model.PageIndex + 1)" 
                   asp-route-keyword="@keyword" 
                   asp-route-userName="@userName"
                   asp-route-email="@email"
                   asp-route-fullName="@fullName"
                   asp-route-gender="@gender"
                   asp-route-roleId="@roleId"
                   asp-route-sortBy="@sortBy" 
                   asp-route-sortDescending="@sortDescending">Next</a>
            </li>
        </ul>
    </nav>
}
