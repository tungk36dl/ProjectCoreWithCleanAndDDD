@model ProjectCore.Application.Common.Models.PagedResult<ProjectCore.Application.Dtos.Roles.RoleDto>

@{
    ViewData["Title"] = "Danh sách Role";
    var keyword = ViewBag.Keyword as string;
    var sortBy = ViewBag.SortBy as string;
    var sortDescending = (bool?)ViewBag.SortDescending ?? false;
    var name = ViewBag.Name as string;
}

<h1>Danh sách Role</h1>

<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0">Tìm kiếm</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <!-- Hidden inputs to preserve sort state -->
            <input type="hidden" name="sortBy" value="@sortBy" />
            <input type="hidden" name="sortDescending" value="@sortDescending.ToString().ToLower()" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label for="keyword" class="form-label">Từ khóa (Tổng quát)</label>
                    <input type="text" name="keyword" value="@keyword" class="form-control" placeholder="Tìm kiếm..." />
                </div>
                <div class="col-md-4">
                    <label for="name" class="form-label">Tên Role</label>
                    <input type="text" name="name" value="@name" class="form-control" placeholder="Tên Role" />
                </div>
            </div>
            <div class="mt-3 text-end">
                <a asp-action="Index" class="btn btn-secondary">Xóa</a>
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Tạo Role Mới</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>
                <a asp-action="Index" 
                   asp-route-keyword="@keyword" 
                   asp-route-name="@name"
                   asp-route-sortBy="Name" 
                   asp-route-sortDescending="@(sortBy == "Name" && !sortDescending ? "true" : "false")" class="text-decoration-none text-dark">
                   Tên Role @if(sortBy == "Name") { <span>@(sortDescending ? "▼" : "▲")</span> }
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-keyword="@keyword" 
                   asp-route-name="@name"
                   asp-route-sortBy="Description" 
                   asp-route-sortDescending="@(sortBy == "Description" && !sortDescending ? "true" : "false")" class="text-decoration-none text-dark">
                   Mô tả @if(sortBy == "Description") { <span>@(sortDescending ? "▼" : "▲")</span> }
                </a>
            </th>
            <th>Số Permissions</th>
            <th>
                <a asp-action="Index" 
                   asp-route-keyword="@keyword" 
                   asp-route-name="@name"
                   asp-route-sortBy="CreatedDate" 
                   asp-route-sortDescending="@(sortBy == "CreatedDate" && !sortDescending ? "true" : "false")" class="text-decoration-none text-dark">
                   Ngày tạo @if(sortBy == "CreatedDate") { <span>@(sortDescending ? "▼" : "▲")</span> }
                </a>
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Items != null && Model.Items.Any())
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.Description ?? "-")</td>
                    <td>
                        <span class="badge bg-info">@item.PermissionIds.Count Permissions</span>
                    </td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa role này?');">
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Không tìm thấy role nào</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model != null && Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-page="@(Model.PageIndex - 1)" 
                   asp-route-keyword="@keyword" 
                   asp-route-name="@name"
                   asp-route-sortBy="@sortBy" 
                   asp-route-sortDescending="@sortDescending">Trước</a>
            </li>
            
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@i" 
                       asp-route-keyword="@keyword" 
                       asp-route-name="@name"
                       asp-route-sortBy="@sortBy" 
                       asp-route-sortDescending="@sortDescending">@i</a>
                </li>
            }
            
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-page="@(Model.PageIndex + 1)" 
                   asp-route-keyword="@keyword" 
                   asp-route-name="@name"
                   asp-route-sortBy="@sortBy" 
                   asp-route-sortDescending="@sortDescending">Sau</a>
            </li>
        </ul>
    </nav>
}

